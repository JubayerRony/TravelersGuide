<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_explore"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.saqib.travellersguide.Explore"
    android:background="@drawable/t5">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="700dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">
            <Button
                android:text="emergency"
                android:layout_width="126dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_style2"
                android:textColor="@android:color/white"
                android:id="@+id/button4"
                android:textAlignment="center"
                android:onClick="emergency"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_above="@+id/editText2" />

            <Button
                android:text="Trips"
                android:layout_width="126dp"
                android:layout_marginStart="180dp"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="-48dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_style"
                android:textColor="@android:color/white"
                android:id="@+id/button5"
                android:textAlignment="center"
                android:onClick="trips"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/editText10"
                android:layout_alignEnd="@+id/editText10" />

            <EditText
                android:hint="search"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editText2"
                android:layout_marginStart="200dp"
                android:layout_marginLeft="200dp"
                android:layout_width="98dp"
                android:layout_below="@+id/button5"
                android:layout_alignRight="@+id/button5"
                android:layout_alignEnd="@+id/button5"
                android:layout_marginTop="15dp" />

            <EditText
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editText10"
                android:layout_width="305dp"
                android:hint="write your post here..."
                android:layout_height="wrap_content"
                android:layout_weight="0.23"
                android:layout_below="@+id/editText2"
                android:layout_centerHorizontal="true" />

            <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioGroup"
        android:layout_below="@+id/editText10"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RadioButton
        android:text="Question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioButton"
        android:layout_below="@+id/editText10"
        android:layout_alignLeft="@+id/radioButton2"
        android:layout_alignStart="@+id/radioButton2" />

        <RadioButton
            android:text="Review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton2"
            android:layout_alignBottom="@+id/editText10"
            android:layout_toLeftOf="@+id/button5"
            android:layout_toStartOf="@+id/button5" />

        </RadioGroup>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/ic_input_add"
                android:background="@drawable/button_style"
                android:layout_marginLeft="110dp"
                android:layout_marginStart="110dp"
                android:layout_marginTop="-60dp"
                android:onClick="plus"/>


            <Button
                android:text="Post"
                android:layout_width="114dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_style"
                android:textColor="@android:color/white"
                android:layout_weight="0.26"
                android:layout_above="@+id/button2"
                android:layout_alignRight="@+id/editText10"
                android:layout_alignEnd="@+id/editText10"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="190dp"
                android:layout_marginLeft="190dp"
                android:layout_marginTop="-50dp"
                android:onClick="post"/>
            <Button
                android:text="My Community Stat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button2"
                android:background="@drawable/button_style"
                android:textColor="@android:color/white"
                android:onClick="community"
                android:layout_weight="0.23"
                android:layout_below="@+id/radioGroup"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="30dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/feed1"
                android:layout_below="@+id/button2"
                android:textColor="#1F0E8E"
                android:textAlignment="gravity"
                android:layout_marginTop="20dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/feed2"
                android:textColor="#B60B00"
                android:textAlignment="gravity"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/feed3"
                android:textColor="#000000"
                android:textAlignment="gravity"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/postans"
                android:textColor="#000000"
                android:textAlignment="gravity"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />


            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_style"
                app:srcCompat="@android:drawable/arrow_up_float"
                android:id="@+id/imageButton2"
                android:onClick="up"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_style"
                app:srcCompat="@android:drawable/arrow_down_float"
                android:id="@+id/imageButton3"
                android:onClick="down"/>
            <EditText
                android:layout_width="122dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="10"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:id="@+id/anstxt"
                android:layout_marginTop="-50dp"
                android:hint="Aanswer..."
                />
            <Button
                android:text="Post"
                android:layout_width="126dp"
                android:layout_marginStart="190dp"
                android:layout_marginLeft="190dp"
                android:layout_marginTop="-50dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_style"
                android:textColor="@android:color/white"
                android:id="@+id/ans"
                android:textAlignment="center"
                android:onClick="ans"
           />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/feed4"
                android:textColor="#1F0E8E"
                android:textAlignment="gravity"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/feed5"
                android:textColor="#B60B00"
                android:textAlignment="gravity"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/review"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/feed6"
                android:textColor="#000000"
                android:textAlignment="gravity"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000"
                android:textAlignment="gravity"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/dynamic1" />


        </LinearLayout>
    </ScrollView>
</RelativeLayout>
